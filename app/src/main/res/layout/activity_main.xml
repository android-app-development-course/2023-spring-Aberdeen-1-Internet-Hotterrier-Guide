<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="378dp"
        android:layout_height="136dp"
        android:layout_marginTop="208dp"
        android:background="#BF7777"
        android:fontFamily="Arial"
        android:gravity="center"
        android:left="0dp"
        android:lineHeight="20dp"
        android:text="@string/nbsp"
        android:textColor="#111111"
        android:textSize="14sp"
        android:top="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="412dp"
        android:layout_height="180dp"
        android:layout_marginTop="72dp"
        android:left="0dp"
        android:radius="20dp"
        android:src="@drawable/mainpage"
        android:top="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,MissingConstraints" />

    <TextView
        android:id="@+id/YYSY"
        android:layout_width="226dp"
        android:layout_height="75dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:left="163dp"
        android:text="Y Y S Y"
        android:textColor="#040303"
        android:textSize="54sp"
        android:top="51dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.937"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="378dp"
        android:layout_height="136dp"
        android:layout_marginTop="28dp"
        android:background="#BF7777"
        android:fontFamily="Arial"
        android:gravity="center"
        android:left="0dp"
        android:lineHeight="20dp"
        android:text="@string/app_name"
        android:textColor="#FF101010"
        android:textSize="14sp"
        android:top="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <View
        android:id="@+id/搜索栏"
        android:layout_width="308dp"
        android:layout_height="36dp"
        android:background="#FFFFFFFF"
        android:gravity="center"
        android:left="60dp"
        android:lineHeight="20dp"
        android:radius="20dp"
        android:top="55dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/底部导航栏"
        android:layout_width="405dp"
        android:layout_height="58dp"
        android:background="#FFFFFFFF"
        android:left="0dp"
        android:top="728dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/postNaviBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/icons8_plus"
            tools:contentDescription="Add Post" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <View
        android:id="@+id/个人头像"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="#FF101010"
        android:left="64dp"
        android:radius="5dp"
        android:top="60dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toStartOf="@+id/搜索栏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/搜索键"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="276dp"
        android:layout_marginEnd="12dp"
        android:background="#FF101010"
        android:left="328dp"
        android:top="60dp"
        app:layout_constraintEnd_toEndOf="@+id/搜索栏"
        app:layout_constraintStart_toStartOf="@+id/搜索栏"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="25dp" />

    <TextView
        android:id="@+id/Hot"
        android:layout_width="101dp"
        android:layout_height="136dp"
        android:text="近期    热梗"
        android:textColor="#040303"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.154"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="93dp" />


</androidx.constraintlayout.widget.ConstraintLayout>