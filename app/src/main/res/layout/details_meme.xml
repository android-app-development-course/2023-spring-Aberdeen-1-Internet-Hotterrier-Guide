<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/view"
        android:layout_width="410dp"
        android:layout_height="35dp"
        android:background="#FF75F9FD"
        android:gravity="center"
        android:left="0dp"
        android:lineHeight="20dp"
        android:top="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/goback" />

    <View
        android:id="@+id/只因太美_梗来源"
        android:layout_width="397dp"
        android:layout_height="257dp"
        android:background="#FFFFFFFF"
        android:gravity="left"
        android:left="-1dp"
        android:lineHeight="20dp"
        android:textColor="#FF333333"
        android:textSize="16dp"
        android:top="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <TextView
        android:id="@+id/只因太美_梗来源_标题"
        android:layout_width="94dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="left"
        android:left="16dp"
        android:text="梗来源："
        android:textColor="#FF101010"
        android:textSize="20dp"
        android:top="12dp"
        app:layout_constraintStart_toStartOf="@+id/只因太美_梗来源"
        app:layout_constraintTop_toTopOf="@+id/只因太美_梗来源" />

    <TextView
        android:id="@+id/只因太美_梗来源_内容"
        android:layout_width="369dp"
        android:layout_height="85dp"
        android:layout_marginTop="56dp"
        android:gravity="left"
        android:left="-1dp"
        android:text="  鸡你太美，是一句网络流行语，为2016年11月29日SWIN-S发布的歌曲《只因你太美》的空耳。出自于蔡徐坤在综艺节目《偶像练习生》之中的自我介绍表演。"
        android:textColor="#FF000000"
        android:textSize="14dp"
        android:top="1dp"
        app:layout_constraintEnd_toEndOf="@+id/只因太美_梗来源"
        app:layout_constraintStart_toStartOf="@+id/只因太美_梗来源"
        app:layout_constraintTop_toTopOf="@+id/只因太美_梗来源" />

    <ImageView
        android:id="@+id/只因太美_梗来源_图片"
        android:layout_width="166dp"
        android:layout_height="89dp"
        android:layout_marginTop="8dp"
        android:left="26dp"
        android:top="125dp"
        app:layout_constraintBottom_toBottomOf="@+id/只因太美_梗来源"
        app:layout_constraintEnd_toEndOf="@+id/只因太美_梗来源"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="@+id/只因太美_梗来源"
        app:layout_constraintTop_toBottomOf="@+id/只因太美_梗来源_内容"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/chicken1" />

    <TextView
        android:id="@+id/只因太美_梗意思_标题"
        android:layout_width="82dp"
        android:layout_height="29dp"
        android:layout_marginStart="36dp"
        android:gravity="left"
        android:left="16dp"
        android:text="梗意思："
        android:textColor="#FF101010"
        android:textSize="20dp"
        android:top="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/只因太美_梗来源"
        app:layout_constraintTop_toBottomOf="@+id/只因太美_梗来源" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="401dp"
        android:layout_height="173dp"
        android:layout_marginTop="36dp"
        android:gravity="left"
        android:left="0dp"
        android:text="   鸡你太美这个梗其实是只因你太美的这句歌词的谐音，这句歌词来自于蔡徐坤的歌曲《只因你太美》，这首歌曲的节奏较快，当快速说唱时，只因你太美这句歌词很容易听成谐音鸡你太美，引发广泛讨论，这个梗很快被大众网友所熟知。   蔡徐坤在演唱这首歌曲的时候，结合了篮球和舞蹈，槽点几多，每个元素都会被网友拿来恶搞。这段表演的的音乐是《只因你太美》在视频中正好出现在蔡徐坤转身扔掉篮球的那一刹那，歌词和画风突变的尬舞动作结合，场面非常有喜感。 "
        android:textColor="#FF101010"
        android:textSize="14dp"
        android:top="376dp"
        app:layout_constraintEnd_toEndOf="@+id/只因太美_梗来源"
        app:layout_constraintHorizontal_bias="0.411"
        app:layout_constraintStart_toStartOf="@+id/只因太美_梗来源"
        app:layout_constraintTop_toBottomOf="@+id/只因太美_梗来源" />

    <View
        android:id="@+id/梗详情底部栏"
        android:layout_width="412dp"
        android:layout_height="41dp"
        android:background="#FFFFFFFF"
        android:left="1dp"
        android:radius="4dp"
        android:top="737dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/梗详情底部栏"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/梗详情底部栏"
        app:srcCompat="@drawable/commemt" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:text="Collected"
        app:fontFamily="@font/alfa_slab_one"
        app:layout_constraintBottom_toBottomOf="@+id/梗详情底部栏"
        app:layout_constraintStart_toEndOf="@+id/imageView12"
        app:layout_constraintTop_toTopOf="@+id/梗详情底部栏" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/梗详情底部栏"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="@+id/梗详情底部栏"
        app:srcCompat="@drawable/collection" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/梗详情底部栏"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/梗详情底部栏"
        app:srcCompat="@drawable/likes" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Likes"
        app:fontFamily="@font/alfa_slab_one"
        app:layout_constraintBottom_toBottomOf="@+id/梗详情底部栏"
        app:layout_constraintStart_toEndOf="@+id/imageView10"
        app:layout_constraintTop_toTopOf="@+id/梗详情底部栏" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Comments"
        app:fontFamily="@font/alfa_slab_one"
        app:layout_constraintBottom_toBottomOf="@+id/梗详情底部栏"
        app:layout_constraintStart_toEndOf="@+id/imageView11"
        app:layout_constraintTop_toTopOf="@+id/梗详情底部栏" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/chicken2" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="156dp"
        android:layout_height="149dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.953"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/chicken3" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="只因太美"
        android:textSize="20sp"
        app:fontFamily="sans-serif-black"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/view" />

</androidx.constraintlayout.widget.ConstraintLayout>